<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <%= render template: 'templates/imports' %>

  <title>Hello, world!</title>
</head>
<body>
<!-- navbar -->
<%= render template: 'templates/navbar' %>
<div class = "page">
  <h1>Edit profile</h1>
  <%= form_tag editprofile_path, class: "form-container", multipart: true do |form| %>
    <div class="form-parameters">
      <%if alert %>
        <div class="alert red">
          <%= alert %>
        </div>
      <% end %>

      <div class="field">
        <%= label_tag 'password', 'Confirma la contraseÃ±a per poder fer canvis:', class: "textlabel" %>
        <br>
        <%= password_field_tag :password, '', class: "textbox"%>
      </div>

      <br>

      <div class="field">
        <%= label_tag 'displayname', "Nom d'usuari:", class: "textlabel" %>
        <br>
        <%= text_field_tag :displayname, '', class: "textbox" %>
      </div>
      <div class="field">
        <%= label_tag 'avatarfield', 'Avatar:', class: "textlabel" %>
        <br>
        <%= file_field_tag :avatar, class: "file-upload" %>
      </div>
      <div class="action">
        <%= submit_tag 'Save', class: "submit-button"%>
      </div>
    </div>
  <% end %>
</div>
</body>