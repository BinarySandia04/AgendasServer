<p id=”alert”><%= alert %></p>
<h1>Register</h1>
<%= form_tag register_path do |form| %>
  <div class=”field”>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class=”field”>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class=”field”>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  </div>
  <div class=”field”>
    <%= label_tag "Confirm password" %>
    <%= password_field_tag :confirmation %>
  </div>
  <div class=”actions”>
  <%= submit_tag(value = "Register") %>
  </div>
<% end %>